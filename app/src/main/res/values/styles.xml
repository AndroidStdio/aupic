<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="customButton">

        <item name="android:layout_height">34dp</item>
        <item name="android:text">Go to Store</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/size_5</item>
        <item name="android:paddingBottom">@dimen/size_5</item>
        <item name="android:paddingLeft">@dimen/size_10</item>
        <item name="android:paddingRight">@dimen/size_10</item>
        <item name="android:background">@drawable/rounded_button_maroon</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_14</item>

    </style>

    <style name="customButtonRoyalBlue">

        <item name="android:layout_height">34dp</item>
        <item name="android:text">Go to Store</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/size_5</item>
        <item name="android:paddingBottom">@dimen/size_5</item>
        <item name="android:paddingLeft">@dimen/size_10</item>
        <item name="android:paddingRight">@dimen/size_10</item>
        <item name="android:background">@drawable/rounded_button_royal_blue</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_14</item>

    </style>

    <style name="customButtonWhite">

        <item name="android:layout_height">20dp</item>
        <item name="android:text">Go to Store</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/size_5</item>
        <item name="android:paddingBottom">@dimen/size_5</item>
        <item name="android:paddingLeft">@dimen/size_10</item>
        <item name="android:paddingRight">@dimen/size_10</item>
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_14</item>

    </style>

    <style name="customButtonDarkGreen">

        <item name="android:layout_height">34dp</item>
        <item name="android:text">Go to Store</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/size_5</item>
        <item name="android:paddingBottom">@dimen/size_5</item>
        <item name="android:paddingLeft">@dimen/size_10</item>
        <item name="android:paddingRight">@dimen/size_10</item>
        <item name="android:background">@drawable/rounded_dark_green</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_14</item>

    </style>

    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:background">@color/very_light_blue</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ToolbarBackground">
        <item name="android:background">#222233</item>
    </style>

    <style name="ChooseContactBackground">
        <item name="android:background">#cc9933</item>
    </style>

    <style name="VerticalDividerForList">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">4sp</item>
        <item name="android:background">#444444</item>
    </style>

    <style name="VerticalDividerLeft">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">4sp</item>
        <item name="android:background">#666677</item>
    </style>

    <style name="VerticalDividerRight">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginRight">4sp</item>
        <item name="android:background">#000022</item>
    </style>

    <style name="HorizontalDividerTop">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#666677</item>
    </style>

    <style name="HorizontalDividerBottom">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#000022</item>
    </style>

</resources>
